# Timeout Configuration
# All values are in milliseconds

# Claude Session Timeouts
CLAUDE_INITIAL_TIMEOUT=1200000        # 20 minutes - Initial build timeout (first attempt)
CLAUDE_RESUME_TIMEOUT=1200000         # 20 minutes - Resume timeout (continuing with existing files)
CLAUDE_RETRY_TIMEOUT=300000           # 5 minutes - Retry timeout (intermediate attempts)
CLAUDE_FINAL_TIMEOUT=180000           # 3 minutes - Final attempt timeout
CLAUDE_COMPLEX_TIMEOUT=900000         # 15 minutes - Complex build timeout
CLAUDE_RECOMMENDATIONS_TIMEOUT=180000 # 3 minutes - Recommendations generation
CLAUDE_DOCUMENTATION_TIMEOUT=300000   # 5 minutes - Documentation generation
CLAUDE_VERSION_CLASSIFICATION_TIMEOUT=60000  # 1 minute - Version classification
CLAUDE_ERROR_FIX_TIMEOUT=600000       # 10 minutes - Error fix timeout

# Process and Command Timeouts
CLAUDE_WARNING_TIMEOUT=120000         # 2 minutes - Claude process warning (doesn't kill)
NPM_INSTALL_TIMEOUT=300000            # 5 minutes - NPM install timeout
BUILD_COMMAND_TIMEOUT=600000          # 10 minutes - Build command timeout
DEPLOY_TIMEOUT=300000                 # 5 minutes - Deploy timeout
VALIDATION_TIMEOUT=120000             # 2 minutes - Validation timeout
FIX_VALIDATION_TIMEOUT=300000         # 5 minutes - Fix validation timeout

# Cache and Cleanup Intervals
CACHE_CLEANUP_INTERVAL=300000         # 5 minutes - Error classifier cache cleanup
BUILD_CLEANUP_INTERVAL=300000         # 5 minutes - Build start time cleanup
METRICS_FLUSH_INTERVAL=5000           # 5 seconds - Metrics flush interval

# Cache Expiration Times
ERROR_CACHE_EXPIRY=3600000            # 1 hour - Error classification cache
BUILD_START_EXPIRY=3600000            # 1 hour - Build start times