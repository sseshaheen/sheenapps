{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/server/*": [
        "./src/server/*"
      ],
      "@sheenapps/i18n-core": [
        "./packages/i18n-core/dist/index.js"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "supabase/functions",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/__tests__/**/*",
    "**/__tests__/**/*",
    "tests/**/*",
    "tmp/**/*",
    "legacy-for-deletion/**/*",
    "packages-idea-was-not-used/**/*"
  ]
}
